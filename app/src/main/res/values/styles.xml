<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <!-- Style for TextView -->
    <style name="TextView"></style>

    <style name="TextView.PoppinsMedium_32_020202">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/color_020202</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextView.PoppinsNormal_16_020202">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/color_020202</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.PoppinsNormal_22_020202">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/color_020202</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView.PoppinsNormal_14_020202">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/color_020202</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.PoppinsNormal_14_8D92A3">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/color_8D92A3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.PoppinsMedium_20_020202">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/color_020202</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for EditText -->
    <style name="EditText"></style>

    <style name="EditText.PoppinsNormal_14sp_8D92A3">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/color_8D92A3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for Button -->
    <style name="Button"></style>

    <style name="Button.Primary">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_020202</item>
        <item name="android:background">@drawable/shape_rectangle_8_ffc700</item>
    </style>

    <style name="Button.Secondary">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_rectangle_8_8d92a3</item>
    </style>

    <!-- Style for Tab Layout -->
    <style name="Tab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tabTextAppearance</item>
    </style>

    <style name="tabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_8D92A3</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ratingBar">
        <item name="colorControlNormal">@color/color_8D92A3</item>
        <item name="colorControlActivated">@color/color_FFC700</item>
    </style>
</resources>